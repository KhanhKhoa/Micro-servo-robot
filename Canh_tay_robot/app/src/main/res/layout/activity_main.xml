<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".MainActivity">

    <SeekBar
        android:id="@+id/sb1"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:max="180"
        android:min="0"
        android:progress="90" />

    <SeekBar
        android:id="@+id/sb2"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/sb1"
        android:layout_marginTop="120dp"
        android:max="110"
        android:min="0"
        android:progress="55" />

    <SeekBar
        android:id="@+id/sb3"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/sb1"
        android:layout_marginBottom="102dp"
        android:max="180"
        android:min="0"
        android:progress="140" />

    <SeekBar
        android:id="@+id/sb4"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/sb1"
        android:layout_marginBottom="52dp"
        android:max="110"
        android:min="0"
        android:progress="75" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp"
        android:layout_toStartOf="@+id/sb1"
        app:srcCompat="@drawable/s2" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39dp"
        android:layout_toStartOf="@+id/sb1"
        app:srcCompat="@drawable/s4" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="88dp"
        android:layout_toStartOf="@+id/sb1"
        app:srcCompat="@drawable/s3" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_toStartOf="@+id/sb1"
        app:srcCompat="@drawable/s1" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView10"
        android:layout_marginEnd="34dp"
        android:text="090"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv1"
        android:layout_alignTop="@+id/imageView4"
        android:text="055"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv1"
        android:layout_alignTop="@+id/imageView8"
        android:text="140"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv1"
        android:layout_alignTop="@+id/imageView9"
        android:text="075"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="78dp"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView7"
        app:srcCompat="@drawable/wifi" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:text="Điều khiển cánh tay robot qua sóng"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:textStyle="bold" />


</RelativeLayout>